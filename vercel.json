{
    "version": 2,
    "builds": [
        {
            "src": "app.js",
            "use": "@vercel/node"
        },
        {
            "src": "public/**",
            "use": "@vercel/static"
        }
    ],
    "routes": [
        {
            "src": "/api/(.*)",     // Всі маршрути /api будуть оброблятися app.js
            "dest": "app.js"
        },
        {
            "src": "/(.*)",         // Усі інші маршрути відправляються до статичних файлів
            "dest": "public/$1"
        }
    ]
}
